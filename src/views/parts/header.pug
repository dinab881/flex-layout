header.header
    img(src="/img/logo.png" alt="Trillo logo").logo
    form.search
        input(type="text" placeholder="search hotels").search__input
        button.search__button
                +SVGicon('icon-magnifying-glass', 'search__icon' )
    nav.user-nav
         each item in ['icon-bookmark', 'icon-chat']
            .user-nav__icon-box
                +SVGicon(item, 'user-nav__icon')
                span.user-nav__notification 13
         .user-nav__user
             img(src="/img/user.jpg" alt="User photo").user-nav__user-photo
             span.user-nav__user-name Jonas
